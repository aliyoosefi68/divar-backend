<div class="row">
  <div class="col-lg-12 d-flex align-items-stretch">
    <div class="card w-100">
      <div class="card-body p-4">
        <% if(successMessage){ %>
        <div class="row">
          <p class="alert alert-info"><%=successMessage%></p>
        </div>
        <% } %>
        <h5 class="card-title fw-semibold mb-4">آگهی های من</h5>
        <span class="d-block mb-3">
          <a href="/post/create" class="btn btn-danger">+ ایجاد آگهی جدید</a>
        </span>

        <%if(posts.length === 0 ){%>
        <p class="alert alert-warning text-center">
          شما هیچ آگهی را ثبت نکرده اید
        </p>
        <%}else{%>
        <div class="table-responsive">
          <table class="table text-nowrap table-striped mb-0 align-middle">
            <thead class="text-dark fs-4">
              <tr>
                <th class="border-bottom-0">
                  <h6 class="fw-semibold mb-0">شناسه</h6>
                </th>
                <th class="border-bottom-0">
                  <h6 class="fw-semibold mb-0">عنوان</h6>
                </th>

                <th class="border-bottom-0">
                  <h6 class="fw-semibold mb-0">تاریخ انتشار</h6>
                </th>
                <th class="border-bottom-0">
                  <h6 class="fw-semibold mb-0">مدیریت</h6>
                </th>
              </tr>
            </thead>
            <tbody>
              <%posts.forEach(post => {%>
              <tr>
                <td class="border-bottom-0">
                  <h6 class="fw-semibold mb-0"><%=post._id%></h6>
                </td>
                <td class="border-bottom-0">
                  <h6 class="fw-semibold mb-0"><%=post.title%></h6>
                </td>

                <td class="border-bottom-0">
                  <h6 class="fw-semibold mb-0">
                    <%=moment(post.createdAt).locale("fa").format(`jDD jMMMM
                    jYYYY`)%>
                  </h6>
                </td>
                <td class="border-bottom-0">
                  <form
                    action="/post/delete/<%=post._id%>?_method=delete"
                    method="post"
                    class="d-inline"
                  >
                    <button type="submit" class="btn btn-danger">
                      <i class="ti ti-trash text-white"></i>
                    </button>
                  </form>
                  <a href="/post/<%=post._id%>" class="btn btn-primary">
                    <i class="ti ti-eye text-white"></i
                  ></a>
                </td>
              </tr>
              <%})%>
            </tbody>
          </table>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
